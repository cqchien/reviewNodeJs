extend ../layout/common.pug

block content
  h1
   span.mr-3 Products

  form(action="/products/search", method="get", class="d-flex w-30 float-right" )
    input(type="text", value= searchQuery, name="q" , class = "form-control")
    button(class="btn btn-warning ml-3 ") Search

  .row.row-cols-2.row-cols-md-4.w-100
    each product in products
      .col.mb-4
        .card.h-100
          img.card-img-top(src= product.image, alt='iamge')
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            h5.card-text= product.price
            a.btn.btn-info(href="/cart/add/" + product.id ) Add To Cart