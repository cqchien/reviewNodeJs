extend ../layout/common.pug

block content
  //- img(src="/images/logo.png", alt="logo")
  h1
   span.mr-3 Users
   a.btn.btn-sm.btn-outline-info.mb-2(href="/users/create") New

  form(action="/users/search", method="get", class="d-flex w-30 float-right" )
    input(type="text", value= searchQuery, name="q" , class = "form-control")
    button(class="btn btn-warning ml-3 ") Search

  table.table.table-striped
    thead.thead-dark
      tr
        th Avatar
        th Name
        th Phone
        th Detail
    tbody
      each user in users 
        tr
          td
            img(src=user.avatar, alt="avatar", width="40")
          td= user.name
          td= user.phone
          td
            a.btn.btn-outline-info(href="/users/"+ user.id) View 